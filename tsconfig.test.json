{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strict": true,
    "paths": {
      "@/index": ["src/index"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/utils/*": ["src/utils/*"],
      "@/repositories/*": ["src/repositories/*"],
      "@e2e/*": ["tests/e2e/*"]
    }
  },
  "include": ["src/**/*.spec.ts", "tests/**/*.ts", "jest.e2e.config.ts"],
  "exclude": ["node_modules"]
}
