{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@prisma/client": [
        "src/generated/prisma/client"
      ]
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "tests/**/*.ts",
    "jest.e2e.config.ts",
    "src/generated/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}