{
    "name": "masumi-payment-service",
    "version": "0.1.0",
    "description": "A Payment service for MASUMI AI Nodes",
    "main": "dist/index.js",
    "author": "NMKR",
    "license": "MIT",
    "type": "module",
    "prisma": {
        "seed": "tsx ./prisma/seed.ts"
    },
    "scripts": {
        "prepare": "husky",
        "lint": "eslint --fix \"src/**/*.{ts,js}\" --config eslint.config.mjs",
        "lint-ci": "eslint \"src/**/*.{ts,js}\" --config eslint.config.mjs",
        "format": "prettier --log-level silent --write \"src/**/*.{ts,js}\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:e2e": "jest --config jest.e2e.config.ts --bail --forceExit",
        "test:e2e:watch": "jest --config jest.e2e.config.ts --watch",
        "test:e2e:verbose": "jest --config jest.e2e.config.ts --verbose",
        "prisma:generate": "npx prisma generate",
        "prisma:migrate": "npx prisma migrate deploy",
        "prisma:migrate:dev": "npx prisma migrate dev",
        "prisma:seed": "npx prisma db seed",
        "dev": "tsx watch ./src/index.ts",
        "build": "npx prisma generate && tsc --noEmit && pkgroll",
        "start": "cross-env NODE_ENV=production node ./dist/index.js",
        "swagger-json": "cross-env DATABASE_URL=postgresql://test@localhost:5432/masumi_payment_service ENCRYPTION_KEY=set-mock-enc-key-for-generation tsx ./src/utils/generator/swagger-generator/cli.ts",
        "swagger-postman": "openapi2postmanv2 -s ./src/utils/generator/swagger-generator/openapi-docs.json -o ./masumi-payment-service.postman_collection.json -p",
        "knip": "knip"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^7.3.0",
        "@blockfrost/blockfrost-js": "^6.0.0",
        "@emurgo/cardano-serialization-lib-nodejs": "^15.0.3",
        "@harmoniclabs/cbor": "1.6.6",
        "@meshsdk/core": "1.9.0-beta.94",
        "@meshsdk/core-cst": "1.9.0-beta.90",
        "@opentelemetry/auto-instrumentations-node": "^0.68.0",
        "@opentelemetry/exporter-metrics-otlp-http": "^0.210.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.210.0",
        "@opentelemetry/instrumentation-express": "^0.58.0",
        "@opentelemetry/instrumentation-http": "^0.210.0",
        "@opentelemetry/resources": "^2.4.0",
        "@opentelemetry/sdk-metrics": "^2.4.0",
        "@opentelemetry/sdk-node": "^0.210.0",
        "@opentelemetry/semantic-conventions": "^1.38.0",
        "@paralleldrive/cuid2": "^3.0.6",
        "@prisma/client": "^6.19.1",
        "@prisma/instrumentation": "^6.19.1",
        "@types/express": "^5.0.0",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "advanced-retry": "^1.2.1",
        "async-mutex": "^0.5.0",
        "canonical-json": "^0.2.0",
        "cbor": "^10.0.11",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "ethereum-cryptography": "^3.2.0",
        "express": "^5.2.1",
        "express-zod-api": "^22.14.1",
        "http-errors": "^2.0.1",
        "json-bigint": "^1.0.0",
        "lz-string": "^1.5.0",
        "spacetime": "^7.12.0",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.2",
        "@jest/globals": "^29.7.0",
        "@jest/types": "^29.6.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.19.6",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.5.5",
        "globals": "^17.0.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "knip": "^5.81.0",
        "lint-staged": "^16.2.7",
        "openapi-to-postmanv2": "^5.8.0",
        "pkgroll": "^2.21.5",
        "prettier": "^3.8.0",
        "prisma": "^6.19.1",
        "ts-jest": "^29.3.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "wait-for-expect": "^4.0.0",
        "wait-on": "^9.0.3"
    },
    "overrides": {
        "libsodium-wrappers-sumo": "0.7.15",
        "libsodium-sumo": "0.7.15"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "npm run format"
        ]
    }
}